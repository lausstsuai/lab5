		-->
		<button type = "button" class = "btn btn-success btn-block">Like</button>
	</div>
	{{/each}}

	<div class = "friends_image thumbnail" >
		<button type = "button" class = "btn btn-danger btn-block">Done!</button>
		<h5>Timing(sec)</h5>
		<input type="text" id="txt">
		<h5>Number of "like"s</h5>
		<input type="text" id="num">
	</div>



